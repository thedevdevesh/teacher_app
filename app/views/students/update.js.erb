const updatedRow = '<tr id="student_<%= @student.id %>">' +
  '<td><%= j @student.name %></td>' +
  '<td><%= j @student.subject %></td>' +
  '<td><%= j @student.marks %></td>' +
  '<td class="text-center">' +
    '<%= j link_to "Edit", "#", class: "btn btn-outline-dark", data: { toggle: "modal", target: "#editStudentModal<%= @student.id %>" } %>' +
    '<%= j button_to "Delete", student_path(@student), method: :delete, data: { confirm: "Are you sure you want to delete this student?", remote: true, class: "btn btn-outline-danger ms-2" } %>' +
  '</td>' +
'</tr>';

$(`#student_<%= @student.id %>`).replaceWith(updatedRow);
$('#editStudentModal<%= @student.id %>').modal('hide');
